<% layout("/layouts/boilerplate") %>
<div class="row">
	<h2 class="col-6 offset-3 mt-3 mb-3">Log in to Wanderlust</h2>
	<div class="col-6 offset-3">
		<form
			action="/login"
			method="post"
			class="needs-validation"
			novalidate>
			<div class="mb-3">
				<label
					for="username"
					class="form-lable"
					>Username</label
				>
				<input
					type="text"
					id="username"
					class="form-control"
					name="username"
					required />
				<div class="invalid-feedback">Username required</div>
			</div>
			<div class="mb-3">
				<label
					for="password"
					class="form-lable"
					>Password</label
				>
				<input
					type="password"
					class="form-control"
					id="password"
					name="password"
					required />
				<div class="invalid-feedback">Password required</div>
			</div>
			<button
				type="submit"
				class="btn btn-success">
				Log in
			</button>
		</form>
	</div>
</div>
